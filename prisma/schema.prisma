generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrgRole {
  OWNER
  ADMIN
  MEMBER
}

enum EvaluationStatus {
  DRAFT
  OPEN
  CLOSED
}

enum TestSessionStatus {
  CREATED
  ACTIVE
  COMPLETED
  CANCELLED
}

enum ParticipantFeedbackMode {
  THANK_YOU_ONLY
  CAMOUFLAGE
}

model User {
  id                 String         @id @default(cuid())
  email              String         @unique
  passwordHash       String
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  memberships        OrgMember[]
  sessions           AuthSession[]
  createdOrgs        Organization[] @relation("CreatedOrganizations")
  initiatedRuns      TestSession[]  @relation("InitiatedRuns")
  createdGroups      Group[]        @relation("CreatedGroups")
  groupMemberships   GroupMember[]  @relation("GroupMemberships")
  ownedEvaluations   Evaluation[]   @relation("EvaluationOwner")
  deletedEvaluations Evaluation[]   @relation("EvaluationDeletedBy")
  closedEvaluations  Evaluation[]   @relation("EvaluationClosedBy")
}

model AuthSession {
  id         String   @id @default(cuid())
  tokenHash  String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  createdAt  DateTime @default(now())
  lastUsedAt DateTime @default(now())
  expiresAt  DateTime
  ipAddress  String?
  userAgent  String?
}

model Organization {
  id          String          @id @default(cuid())
  name        String
  createdAt   DateTime        @default(now())
  createdBy   User?           @relation("CreatedOrganizations", fields: [createdById], references: [id])
  createdById String?
  members     OrgMember[]
  evaluations Evaluation[]
  students    StudentRecord[]
  groups      Group[]
}

model OrgMember {
  id             String       @id @default(cuid())
  role           OrgRole
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String
  createdAt      DateTime     @default(now())

  @@unique([userId, organizationId])
}

model Evaluation {
  id                      String                  @id @default(cuid())
  name                    String
  description             String?
  status                  EvaluationStatus        @default(DRAFT)
  testPackage             TestPackage?            @relation(fields: [testPackageId], references: [id])
  testPackageId           String?
  isClosed                Boolean                 @default(false)
  closedAt                DateTime?
  closedBy                User?                   @relation("EvaluationClosedBy", fields: [closedByUserId], references: [id])
  closedByUserId          String?
  participantFeedbackMode ParticipantFeedbackMode @default(THANK_YOU_ONLY)
  organization            Organization?           @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId          String?
  ownerUser               User?                   @relation("EvaluationOwner", fields: [ownerUserId], references: [id])
  ownerUserId             String?
  deletedAt               DateTime?
  deletedBy               User?                   @relation("EvaluationDeletedBy", fields: [deletedById], references: [id])
  deletedById             String?
  createdAt               DateTime                @default(now())
  updatedAt               DateTime                @updatedAt
  sessions                TestSession[]
  tests                   EvaluationTest[]
  invites                 Invite[]
  roster                  EvaluationRosterEntry[]

  @@index([deletedAt])
  @@index([ownerUserId])
  @@index([organizationId])
  @@index([closedAt])
}

model Invite {
  id           String        @id @default(cuid())
  evaluation   Evaluation    @relation(fields: [evaluationId], references: [id], onDelete: Cascade)
  evaluationId String
  token        String        @unique
  tokenHash    String        @unique
  alias        String?
  createdAt    DateTime      @default(now())
  sessions     TestSession[]

  @@index([evaluationId])
}

model StudentRecord {
  id             String        @id @default(cuid())
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String?
  code           String        @unique
  grade          String?
  section        String?
  metadata       Json?
  createdAt      DateTime      @default(now())
  testSessions   TestSession[]
}

model TestDefinition {
  id                 String                  @id @default(cuid())
  slug               String
  version            Int
  title              String
  description        String?
  styleId            String                  @default("classic")
  definition         Json
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt
  evaluationTests    EvaluationTest[]
  packageItems       TestPackageItem[]
  sessions           TestSession[]
  camouflageOptions  TestCamouflageOption[]
  camouflageSlots    TestCamouflageSlot[]
  camouflageMappings TestCamouflageMapping[]
  camouflageCopies   TestCamouflageCopy[]

  @@unique([slug, version])
}

model TestSession {
  id                      String                 @id @default(cuid())
  status                  TestSessionStatus      @default(CREATED)
  attemptKey              String                 @unique
  testDefinition          TestDefinition         @relation(fields: [testDefinitionId], references: [id])
  testDefinitionId        String
  participantTokenHash    String?
  evaluation              Evaluation?            @relation(fields: [evaluationId], references: [id], onDelete: Cascade)
  evaluationId            String?
  invite                  Invite?                @relation(fields: [inviteId], references: [id], onDelete: SetNull)
  inviteId                String?
  evaluationRosterEntry   EvaluationRosterEntry? @relation(fields: [evaluationRosterEntryId], references: [id], onDelete: SetNull)
  evaluationRosterEntryId String?
  studentRecord           StudentRecord?         @relation(fields: [studentRecordId], references: [id], onDelete: SetNull)
  studentRecordId         String?
  group                   Group?                 @relation(fields: [groupId], references: [id], onDelete: SetNull)
  groupId                 String?
  initiatedBy             User?                  @relation("InitiatedRuns", fields: [initiatedById], references: [id], onDelete: SetNull)
  initiatedById           String?
  startedAt               DateTime?
  completedAt             DateTime?
  createdAt               DateTime               @default(now())
  lastSeenAt              DateTime               @default(now())
  answers                 Answer[]
  scores                  Score[]

  @@index([participantTokenHash])
  @@index([inviteId])
  @@index([evaluationRosterEntryId])
}

model TestPackage {
  id          String            @id @default(cuid())
  slug        String            @unique
  title       String
  description String?
  context     String?
  isActive    Boolean           @default(true)
  createdAt   DateTime          @default(now())
  items       TestPackageItem[]
  evaluations Evaluation[]
}

model EvaluationRosterEntry {
  id           String        @id @default(cuid())
  evaluation   Evaluation    @relation(fields: [evaluationId], references: [id], onDelete: Cascade)
  evaluationId String
  code         String
  grade        String?
  section      String?
  metadata     Json?
  createdAt    DateTime      @default(now())
  testSessions TestSession[]

  @@unique([evaluationId, code])
  @@index([evaluationId])
}

model TestPackageItem {
  id               String         @id @default(cuid())
  testPackage      TestPackage    @relation(fields: [testPackageId], references: [id], onDelete: Cascade)
  testPackageId    String
  testDefinition   TestDefinition @relation(fields: [testDefinitionId], references: [id], onDelete: Cascade)
  testDefinitionId String
  sortOrder        Int            @default(0)
  isFree           Boolean        @default(false)

  @@unique([testPackageId, testDefinitionId])
  @@index([testPackageId, sortOrder])
  @@index([testDefinitionId])
}

model EvaluationTest {
  id               String         @id @default(cuid())
  evaluation       Evaluation     @relation(fields: [evaluationId], references: [id], onDelete: Cascade)
  evaluationId     String
  testDefinition   TestDefinition @relation(fields: [testDefinitionId], references: [id], onDelete: Cascade)
  testDefinitionId String
  sortOrder        Int            @default(0)
  camouflageSet    CamouflageSet? @relation(fields: [camouflageSetId], references: [id], onDelete: SetNull)
  camouflageSetId  String?

  @@unique([evaluationId, testDefinitionId])
  @@index([evaluationId, sortOrder])
  @@index([testDefinitionId])
  @@index([camouflageSetId])
}

model CamouflageSet {
  id              String                  @id @default(cuid())
  slug            String                  @unique
  title           String
  isActive        Boolean                 @default(true)
  createdAt       DateTime                @default(now())
  characters      CamouflageCharacter[]
  options         TestCamouflageOption[]
  evaluationTests EvaluationTest[]
  mappings        TestCamouflageMapping[]
  copies          TestCamouflageCopy[]
}

model CamouflageCharacter {
  id        String                  @id @default(cuid())
  set       CamouflageSet           @relation(fields: [setId], references: [id], onDelete: Cascade)
  setId     String
  key       String
  title     String
  imageUrl  String?
  sortOrder Int                     @default(0)
  createdAt DateTime                @default(now())
  mappings  TestCamouflageMapping[]

  @@unique([setId, key])
}

model TestCamouflageOption {
  id               String         @id @default(cuid())
  testDefinition   TestDefinition @relation(fields: [testDefinitionId], references: [id], onDelete: Cascade)
  testDefinitionId String
  camouflageSet    CamouflageSet  @relation(fields: [camouflageSetId], references: [id], onDelete: Cascade)
  camouflageSetId  String
  isActive         Boolean        @default(true)
  sortOrder        Int            @default(0)

  @@unique([testDefinitionId, camouflageSetId])
  @@index([testDefinitionId])
  @@index([camouflageSetId])
}

model TestCamouflageSlot {
  id               String         @id @default(cuid())
  testDefinition   TestDefinition @relation(fields: [testDefinitionId], references: [id], onDelete: Cascade)
  testDefinitionId String
  key              String
  rank             Int
  title            String?
  createdAt        DateTime       @default(now())

  @@unique([testDefinitionId, key])
  @@index([testDefinitionId, rank])
}

model TestCamouflageMapping {
  id               String              @id @default(cuid())
  testDefinition   TestDefinition      @relation(fields: [testDefinitionId], references: [id], onDelete: Cascade)
  testDefinitionId String
  camouflageSet    CamouflageSet       @relation(fields: [camouflageSetId], references: [id], onDelete: Cascade)
  camouflageSetId  String
  slotKey          String
  character        CamouflageCharacter @relation(fields: [characterId], references: [id], onDelete: Cascade)
  characterId      String

  @@unique([testDefinitionId, camouflageSetId, slotKey])
  @@index([testDefinitionId, camouflageSetId])
}

model TestCamouflageCopy {
  id               String         @id @default(cuid())
  testDefinition   TestDefinition @relation(fields: [testDefinitionId], references: [id], onDelete: Cascade)
  testDefinitionId String
  camouflageSet    CamouflageSet  @relation(fields: [camouflageSetId], references: [id], onDelete: Cascade)
  camouflageSetId  String
  slotKey          String
  headline         String
  description      String
  tips             Json?

  @@unique([testDefinitionId, camouflageSetId, slotKey])
}

model Answer {
  id            String      @id @default(cuid())
  testSession   TestSession @relation(fields: [testSessionId], references: [id], onDelete: Cascade)
  testSessionId String
  questionId    String
  payload       Json
  createdAt     DateTime    @default(now())

  @@unique([testSessionId, questionId])
}

model Score {
  id            String      @id @default(cuid())
  testSession   TestSession @relation(fields: [testSessionId], references: [id], onDelete: Cascade)
  testSessionId String
  dimension     String
  value         Float
  metadata      Json?
  createdAt     DateTime    @default(now())

  @@unique([testSessionId, dimension])
  @@index([dimension])
}

model Group {
  id             String        @id @default(cuid())
  code           String        @unique
  name           String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String?
  createdBy      User?         @relation("CreatedGroups", fields: [createdById], references: [id], onDelete: SetNull)
  createdById    String?
  createdAt      DateTime      @default(now())
  members        GroupMember[]
  sessions       TestSession[]
}

model GroupMember {
  id        String   @id @default(cuid())
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId   String
  label     String?
  user      User?    @relation("GroupMemberships", fields: [userId], references: [id], onDelete: SetNull)
  userId    String?
  createdAt DateTime @default(now())
}
